{
    "name": "prompter",
    "displayName": "prompter",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.88.0"
    },
    "extensionDependencies": [
        "github.copilot-chat"
    ],
    "categories": [
        "Chat"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "enabledApiProposals": [
        "chatParticipant",
        "chatVariableResolver",
        "languageModels"
    ],
    "contributes": {
        "chatParticipants": [
            {
                "id": "prompter",
                "name": "Prompter",
                "description": "Let's analyze and improve some prompts",
                "isSticky": true,
                "commands": [
                    {
                        "name": "find-prompts",
                        "description": "Find prompts in your workspace"
                    },
                    {
                        "name": "analyze-bias",
                        "description": "Analyze bias for a selected prompt"
                    },
                    {
                        "name": "analyze-injection-vulnerability",
                        "description": "Analyze injection vulnerability of a selected prompt"
                    },
                    {
                        "name": "select-system-prompt",
                        "description": "Select or define a system prompt for Prompt Analysis tasks"
                    },
                    {
                        "name": "suggest-by-rules",
                        "description": "Suggest improvements for a prompt based on OpenAI rules"
                    },
                    {
                        "name": "help",
                        "description": "Get help with using prompter"
                    },
                    {
                        "name": "parse-prompt",
                        "description": "Parse and show a prompt's internal representation and its associated generated default values"
                    }
                ]
            }
        ],
        "commands": [
            {
                "command": "prompter.savePrompt",
                "title": "Save a prompt for further analysis"
            }
        ]
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./ && tscp",
        "watch": " concurrently \"tscp -w \" \"tsc -watch -p .\" ",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "postinstall": "husky"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.5.9",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "@typescript-eslint/parser": "^6.19.1",
        "@vscode/test-cli": "^0.0.5",
        "@vscode/test-electron": "^2.3.9",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-unused-imports": "^3.1.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "prettier": "3.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "typescript-cp": "^0.1.9"
    },
    "dependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/object-hash": "^3.0.6",
        "@types/sprintf-js": "^1.1.4",
        "axios": "^1.6.7",
        "copyfiles": "^2.4.1",
        "js-yaml": "^4.1.0",
        "natural": "^6.12.0",
        "object-hash": "^3.0.0",
        "openai": "^4.28.0",
        "sprintf-js": "^1.1.3",
        "string-comparison": "^1.3.0",
        "ts-retry": "^4.2.5",
        "web-tree-sitter": "^0.21.0"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    }
}
